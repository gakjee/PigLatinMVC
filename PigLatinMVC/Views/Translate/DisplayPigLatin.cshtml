@model PigLatinMVC.Models.English_PigLatin

@{
    ViewBag.Title = "DisplayPigLatin";
}

<h2>Display Pig Latin</h2>
<hr />

<div class="col-lg-offset-0">
    @Html.LabelFor(m => m.English_text, new {@class = "col-md-2 control-label"})
    <div class="col-md-10">
        @Html.DisplayFor(m => m.English_text, new { @class = "form-control"})
        <hr />
    </div>
</div>
<div class="col-lg-offset-0">
    @Html.LabelFor(m => m.PigLatin_text, new { @class = "col-md-2 control-label"}) 
    <div class="col-md-10">
        @Html.DisplayFor(m => m.PigLatin_text, new {@class = "form-control"})
        <hr />
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}