@model PigLatinMVC.Models.English_PigLatin

@{
    ViewBag.Title = "Translate";
}

<h2>Translate english to Pig Latin</h2>
<hr />

@using (Html.BeginForm("Translate", "Translate", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
                <h4>Enter the text in english</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.English_text, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.English_text, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.English_text, "", new {@class="text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Translate" />
                    </div>
                </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
}
